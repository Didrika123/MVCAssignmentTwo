@model List<Person> 

<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <h3>Name</h3>
        </div>
        <div class="col-sm-2">
            <h3>City</h3>
        </div>
        <div class="col-sm-2">
            <h3>Phone Number</h3>
        </div>
        <div class="col-sm-2">
            <h3>Action</h3>
        </div>
    </div>
    @foreach (var item in Model)
    {
        string targetId = "persondiv" + item.Id;
        string buttonId = "personEditBtn" + item.Id;
        <div id="@targetId">
            @* Maybe can target the actual <partial> instead of an extra div? *@
            <partial name="_PersonPartialView" model="item" />
        </div>
    }

</div>