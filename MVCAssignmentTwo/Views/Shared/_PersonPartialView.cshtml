@model Person

@{
    string targetId = "persondiv" + Model.Id;
}
<div class="row">
    <div class="col-sm-2">
        <p>@Model.Name</p>
    </div>
    <div class="col-sm-2">
        <p>@Model.City</p>
    </div>
    <div class="col-sm-2">
        <p>@Model.PhoneNumber</p>
    </div>
    <div class="col-sm-2">
        <p>
            <button onclick="ReplaceTargetWithAspActionResult(event, this, '@targetId');" asp-controller="Register" asp-action="EditPerson" asp-route-id="@Model.Id">Edit</button>
            <partial name="_DeletePersonPartialView" model="Model.Id" />
        </p>
    </div>
</div>

