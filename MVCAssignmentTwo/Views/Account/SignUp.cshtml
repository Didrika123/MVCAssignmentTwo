@model IdentityCreateViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<h1>Sign Up</h1>

@if (ViewBag.Msg != null)
{
    <h3 style="color: red;">@ViewBag.Msg</h3>
}

<form asp-action="SignUp" method="post">
    <div class="form-group">

        <label asp-for="FirstName" class="control-label"></label>
        <input class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span><br />

        <label asp-for="LastName" class="control-label"></label>
        <input class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span><br /><br />

        <label asp-for="Birthdate" class="control-label"></label>
        <input asp-for="Birthdate" />
        <span asp-validation-for="Birthdate" class="text-danger"></span><br /><br />

        <label asp-for="Username" class="control-label"></label>
        <input class="form-control" asp-for="Username" />
        <span asp-validation-for="Username" class="text-danger"></span><br />

        <label asp-for="Password" class="control-label"></label>
        <input id="loginpw" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span><br />

        <label asp-for="RePassword" class="control-label"></label>
        <input id="loginpw2" class="form-control" asp-for="RePassword" />
        <span asp-validation-for="RePassword" class="text-danger"></span><br />
        <input type="button" onclick="PasswordToggle(this, 'loginpw'); PasswordToggle(this, 'loginpw2')" value="Show Password" class="btn btn-info" /><br />
    </div>

    <div class="form-group">
        <input type="submit" value="Sign Up" class="btn btn-primary" />
    </div>
</form>
